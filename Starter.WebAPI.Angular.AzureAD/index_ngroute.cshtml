@*Using this index file enables server-side rendering with Razor syntax. This is especially useful for bundling and minification.*@
@using System.Web.Optimization;
@{
    Layout = null;
}
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Web API & Angular Starter</title>
    <script src="Scripts/angular/angular.min.js"></script>    
    <script src="Scripts/angular/angular-route.min.js"></script>
    <script src="https://secure.aadcdn.microsoftonline-p.com/lib/1.0.0/js/adal.min.js"></script>
    <script src="https://secure.aadcdn.microsoftonline-p.com/lib/1.0.0/js/adal-angular.min.js"></script>
    <script src="Scripts/app/app.js"></script>
    <script src="Scripts/app/controllers/ValuesController.js"></script>    
    <script src="Scripts/app/controllers/HomeController.js"></script>  

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/modernizr")    
</head>
<body ng-app="app" ng-controller="HomeController">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="#/home" class="navbar-brand">Web API & Angular Starter</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>
                        <a href="#/home">Home</a>
                    </li>
                    <li>
                        <a href="#/values">Values</a>
                    </li>
                    <li>
                        <a href="#/about">About</a>
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <a class="btn btn-link" ng-hide="userInfo.isAuthenticated" ng-click="login()">Login</a>
                    </li>
                    <li>
                        <a class="btn btn-link" ng-show="userInfo.isAuthenticated" ng-click="logout()">Logout</a>
                    </li>
                </ul>

            </div>
        </div>
    </div>
    <div class="container body-content">
        <div ng-view></div>
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My Web API & Angular Application using Azure AD Identity</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>